<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_rectangle_border"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:id="@+id/item">


    <TextView
        android:id="@+id/ten_phong_ban"
        android:textSize="20sp"
        android:text="sample name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/ten_phong_ban"
        android:text="sample ma phong ban"
        android:id="@+id/ma_phong_ban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dia_chi_pb"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ma_phong_ban"
        android:text="sample dia chi phong ban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>