<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_rectangle_border"
    android:padding="10dp"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/ten_du_an"
        android:layout_marginEnd="70dp"
        android:textSize="20sp"
        android:text="sample ten du an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/ten_du_an"
        android:text="sample ma du an"
        android:id="@+id/ma_du_an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/du_an_nguoi"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ma_du_an"
        android:text="sample so nguoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>